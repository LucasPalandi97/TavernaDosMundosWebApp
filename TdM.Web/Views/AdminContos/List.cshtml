@model List<TdM.Database.Models.Domain.Conto>
@using TdM.Database.Models.Domain.Enums;
@{

}
<partial name="_Navbar2" />
<div class="row mt-4 mb-5">
    <h1 class="text-center">List Stories - Admin Functionality</h1>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table table-hover  table-responsive-sx" id="table">
            <thead class="text-nowrap">
                <tr>
                    <th id="idcolumn">Id</th>
                    <th onclick="sortTable(1)">World <span class="pointer">&#9660</span></th>
                    <th onclick="sortTable(2)">Story <span class="pointer">&#9660</span></th>
                    <th class="dnone" onclick="sortTable(4)">Autor <span class="pointer">&#9660</span></th>
                    <th onclick="sortTable(3)">Published <span class="pointer">&#9660</span></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var conto in Model)
                {
                    <tr>
                        <td id="tdid">@conto.Id</td>
                        <td>@conto.Mundo?.Nome</td>
                        <td>
                            <div class="dropdown" id="worldbuild">
                                <button class=" nav-link dropdown-toggle" type="button" id="worldDropdownButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @conto.Titulo
                                </button>
                                <ul class="dropdown-menu text-center " aria-labelledby="worldDropdownButton">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Contos" asp-action="index" asp-route-urlHandle="@conto.UrlHandle">@conto.Titulo</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="#" id="continentsDropdown">
                                            Continents &raquo;
                                        </a>
                                        <ul class="dropdown-menu dropdown-submenu" aria-labelledby="continentsDropdownButton">
                                            @if (conto.Continentes != null && conto.Continentes.Any())
                                            {
                                                @foreach (var continente in conto.Continentes.OrderBy(c => c.Nome))
                                                {
                                                    <li>
                                                        <a class="dropdown-item" asp-controller="Continentes" asp-action="index" asp-route-urlHandle="@continente.UrlHandle" id="regionDropdown">@continente.Nome &raquo </a>
                                                        <ul class="dropdown-menu dropdown-submenu" aria-labelledby="regionDropdown">
                                                            @if (continente.Regioes != null && continente.Regioes.Any())
                                                            {
                                                                @foreach (var regiao in continente.Regioes.Where(c => c.Contos.Any()).OrderBy(r => r.Nome))
                                                                {
                                                                    <li>
                                                                        <a class="dropdown-item" asp-controller="Regioes" asp-action="index" asp-route-urlHandle="@regiao.UrlHandle">@regiao.Nome</a>
                                                                    </li>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <li class="dropdown-item text-danger" href="#">No regions found!</li>
                                                            }
                                                        </ul>
                                                    </li>
                                                }
                                            }
                                            else
                                            {
                                                <li class="dropdown-item text-danger" href="#">No continents found!</li>
                                            }
                                        </ul>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#" id="charactersDropdown">
                                            Characters &raquo;
                                        </a>
                                        <ul class="dropdown-menu dropdown-submenu" aria-labelledby="charactersDropdown">
                                            @if (conto.Personagens != null && conto.Personagens.Any())
                                            {
                                                @foreach (var personagem in conto.Personagens.OrderBy(p => p.Nome))
                                                {
                                                    <li>
                                                        <a class="dropdown-item" asp-controller="Personagens" asp-action="index" asp-route-urlHandle="@personagem.UrlHandle">@personagem.Nome</a>
                                                    </li>
                                                }
                                            }
                                            else
                                            {
                                                <li class="dropdown-item text-danger" href="#">No characters found!</li>
                                            }
                                        </ul>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#" id="creaturesDropdown">
                                            Creatures &raquo;
                                        </a>
                                        <ul class="dropdown-menu dropdown-submenu" aria-labelledby="creaturesDropdown">
                                            @if (conto.Criaturas != null && conto.Criaturas.Any())
                                            {
                                                @foreach (var criatura in conto.Criaturas.OrderBy(cr => cr.Nome))
                                                {
                                                    <li>
                                                        <a class="dropdown-item" asp-controller="Criaturas" asp-action="index" asp-route-urlHandle="@criatura.UrlHandle">@criatura.Nome</a>
                                                    </li>
                                                }
                                            }
                                            else
                                            {
                                                <li class="dropdown-item text-danger" href="#">No creatures found!</li>
                                            }
                                        </ul>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#" id="creaturesDropdown">
                                            Peoples &raquo;
                                        </a>
                                        <ul class="dropdown-menu dropdown-submenu" aria-labelledby="creaturesDropdown">
                                            @if (conto.Povos != null && conto.Povos.Any())
                                            {
                                                @foreach (var povo in conto.Povos.OrderBy(po => po.Nome))
                                                {
                                                    <li>
                                                        <a class="dropdown-item" asp-controller="Povos" asp-action="index" asp-route-urlHandle="@povo.UrlHandle">@povo.Nome</a>
                                                    </li>
                                                }
                                            }
                                            else
                                            {
                                                <li class="dropdown-item text-danger" href="#">No People found!</li>
                                            }
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        <td class="dnone">@conto.Autor.GetDisplayName()</td>
                        <td class="published-date">@conto.PublishedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <form method="post" asp-controller="AdminContos" asp-action="Delete" asp-route-id="@conto.Id" id="deleteForm-@conto.Id">
                                <ul class="list-inline flex-nowrap m-0">
                                    <li class="list-inline-item">
                                        <a class="btn btn-sm rounded-0" type="button" asp-area="" asp-controller="AdminContos" asp-action="Edit" asp-route-id="@conto.Id"><i class="bi bi-pencil-square"></i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <button class="btn btn-sm rounded-0" type="button" data-bs-toggle="modal" data-bs-target="#ConfirmDeleteModal-@conto.Id"><i class="bi bi-trash-fill"></i></button>
                                    </li>
                                    @if (conto.Visible == false)
                                    {
                                        <li class="list-inline-item">
                                            <a class="btn btn-sm bg-transparent border-0 disabled"><i class="bi bi-eye-slash"></i></a>
                                        </li>
                                    }
                                </ul>
                                <!-- Modal Delete -->
                                <div class="modal fade" id="ConfirmDeleteModal-@conto.Id" tabindex="-1" aria-labelledby="ConfirmDeleteModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <p>Are you sure you want to delete this story?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Story found!</p>
    }
</div>
@section Scripts
    {
    <script type="text/javascript" src="~/js/SortElements.js"></script>
    <script type="text/javascript" src="~/js/DropdownBuild.js"></script>
}