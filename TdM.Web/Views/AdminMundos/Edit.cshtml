@using TdM.Database.Models.Domain.Enums;
@model TdM.Web.Models.ViewModels.EditMundoRequest;
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="containter">
        <h1>Edit World - Admin Funcionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">

            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id="id" class="form-control" asp-for="MundoId" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">World</label>
                <input type="text" id="nome" class="form-control" asp-for="Nome" />
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" id="descricao" class="form-control" asp-for="Descricao" />
            </div>
            <div class="mb-3">
                @Html.DropDownList("autor", Html.GetEnumSelectList<Autor>(), new {@class ="form-control"})
            </div>


            <div class="mb-3">
                <div class="d-flex">

                    <button type="submit" class="btn btn-dark">Update</button>
                    <button type="button" class="btn btn-danger ms-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Delete
                    </button>
                   
                </div>

            </div>


  
            <!-- Modal -->
            <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">                      
                        <div class="modal-body">
                            <p>Are you sure you want to delete this world?</p>  
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                            <button class="btn btn-danger ms-2" type="submit" asp-area="" asp-controller="AdminMundos" asp-action="Delete">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
           
        </form>
    }
    else
    {
        <p>World not found!</p>
    }
</div>
@section Scripts
    {
    <script>
   
    </script>
}

