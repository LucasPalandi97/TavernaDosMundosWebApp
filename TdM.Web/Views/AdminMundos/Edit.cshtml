@using TdM.Web.Models.Domain.Enums;
@model TdM.Web.Models.ViewModels.EditMundoRequest;
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="containter">
        <h1>Edit World - Admin Funcionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">

            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id="id" class="form-control" asp-for="MundoId" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">World</label>
                <input type="text" id="nome" class="form-control" asp-for="Nome" />
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" id="descricao" class="form-control" asp-for="Descricao" />
            </div>
            <div class="mb-3">
                @Html.DropDownList("autor", Html.GetEnumSelectList<Autor>(), new {@class ="form-control"})
            </div>
            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="confirmdelete">
                <div class="toast-header">
                    <img src="..." class="rounded mr-2" alt="...">
                    <strong class="mr-auto">Bootstrap</strong>
                    <small>11 mins ago</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>

                    </button>
                </div>
                <div class="toast-body">
                    <button class="btn btn-danger ms-2" type="submit" asp-area="" asp-controller="AdminMundos" asp-action="Delete">Delete</button>
                </div>
            </div>
            <div class="mb-3">
                <div class="d-flex">

                    <button type="submit" class="btn btn-dark">Update</button>
                    <button class="btn btn-danger ms-2" type="button" id="btnDelete">Delete</button>

                  
                </div>

            </div>
        </form>
    }
    else
    {
         <p>World not found!</p>
    }
</div>
@section Scripts 
{
    <script>
                          $(document).ready(function () {
                              $('.toast').toast();
                              $('#btnDelete').on('click', function () {
                                  $('#confirmdelete').toast('show')
                              })
                              alert("document is ready");
                          });
    </script>
}

