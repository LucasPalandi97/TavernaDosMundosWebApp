@model List<TdM.Database.Models.Domain.Mundo>
@{
    ViewData["Title"] = "Worlds's Page";
}

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
       <div class="d-flex flex-column bd-highlight mb-3">
                @foreach (var mundo in Model)
                {
                    <div class="card bg-dark text-white m-3 col-12 " style="height:350px;">
                    <img src="@mundo.ImgBox" class="card-img h-100 w-100" style=" object-fit: cover" alt="Responsive Image">
                        <div class="card-img-overlay">
@*                        <button id="btnEdit" class="btn btn-warning btn-small position-absolute top-0 start-100 translate-middle">
                            <a class="" asp-area="" asp-controller="AdminMundos" asp-action="Edit" asp-route-id="@mundo.Id"><i class="bi bi-wrench-adjustable"></i></a>
                            </button>*@
                            <h5 class="card-title">@mundo.Nome</h5>
                        <p class="card-text text-black ">@mundo.CurtaDescricao</p>
                            <p class="card-text text-capitalize">Por @mundo.Autor</p>
                        </div>
                    
                    </div>
                
                                         
                }
            </div>
       
    }
    else
    {
        <p>No Worlds found!</p>
    }
</div>
