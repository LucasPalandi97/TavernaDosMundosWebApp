@using TdM.Database.Models.Domain.Enums;
@model TdM.Web.Models.ViewModels.EditContinenteRequest;
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="containter">
        <h1>Edit Continent - Admin Funcionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3 ">
                <label class="form-label">Id</label>
                <input type="text" id="id" class="form-control" asp-for="Id" readonly />
            </div>

            <div class="mb-3 col-8">
                <label for="nome" class="form-label">World</label>
                <input type="text" class="form-control" id="nome" asp-for="Nome" />
            </div>

            <div class="mb-3">
                <label for="descricao" class="form-label">Short Description</label>
                <input class="form-control" type="text" placeholder="Continent's Short Description" id="CurtaDescricao" name="CurtaDescricao" asp-for="CurtaDescricao" />
            </div>

            <div class="mb-3">
                <label for="descricao" class="form-label">Description</label>
                <textarea placeholder="Continent's Description" id="descricao" name="descricao" asp-for="Descricao"></textarea>
            </div>

            @if (Model.ImgCard != null)
            {
                <img src="@Model.ImgCard" id="ImageCardUploadDisplay" style="width:300px; margin-top:1em;" />

            }
            else
            {
                <img src="" id="ImageCardUploadDisplay" style="width:300px; margin-top:1em;" />

            }

            <div class="mb-3">
                <label class="form-label">Upload Image</label>
                <input type="file" id="ImageCardUpload" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="ImgCardUrl">Display Image</label>
                <input type="text" class="form-control" id="ImgCardUrl" placeholder="Image's URL" asp-for="ImgCard" />
            </div>

            @if (Model.ImgBox != null)
            {
                <img src="@Model.ImgBox" id="ImageBoxUploadDisplay" style="width:300px; margin-top:1em;" />

            }
            else
            {
                <img src="" id="ImageBoxUploadDisplay" style="width:300px; margin-top:1em;" />

            }

            <div class="mb-3">
                <label class="form-label">Upload Image</label>
                <input type="file" id="ImageBoxUpload" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="ImgBoxUrl">Content Image</label>
                <input type="text" class="form-control" id="ImgBoxUrl" placeholder="Image's URL" asp-for="ImgBox" />
            </div>

            <div class="mb-3 col-2">
                <label class="form-label">Published Date</label>
                <input type="datetime-local" class="form-control" id="publishedDate" asp-for="PublishedDate" />
            </div>

            <div class="mb-3">
                <label class="form-label">URL Handle</label>
                <input type="text" class="form-control" id="urlHandle" asp-for="UrlHandle" placeholder="Suggestion: TheGalaxyOfLuna" />
            </div>

            <div class="mb-3 col-8">
                <label class="form-label">Mundo</label>
                <select class="form-select" asp-items="@Model.Mundos" asp-for="SelectedMundo">
                    <option value="" class="text-danger">No World</option>
                </select>
            </div>

            <div class="form-check form-switch mb-3">
                <label class="form-check-label" for="visible">Visible?</label>
                <input class="form-check-input" type="checkbox" id="visible" asp-for="Visible" checked>
            </div>

            <div class="mb-3">
                <div class="d-flex">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <button type="button" class="btn btn-danger ms-2" data-bs-toggle="modal" data-bs-target="#exampleModal">Delete</button>
                </div>
            </div>

            <!-- Modal Delete -->
            <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <p>Are you sure you want to delete this continent?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                            <button class="btn btn-danger ms-2" type="submit" asp-area="" asp-controller="AdminContinentes" asp-action="Delete">Delete</button>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    }
    else
    {
        <p>Continent not found!</p>
    }

</div>
@section Scripts
    {
    <script type="text/javascript" src="~/js/Formulario.js"></script>
}
