@model TdM.Web.Models.ViewModels.AddMundoRequest
@using TdM.Database.Models.Domain.Enums
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="containter">
        <h1>Add new World - Admin Funcionality</h1>
    </div>
</div>

<div class="container py-5 col-4 ">
    <form method="post">
        <div class="mb-3 col-8">
            <label for="nome" class="form-label">World</label>
            <input type="text" class="form-control" id="nome" asp-for="Nome"/>
        </div>
        <div class="mb-3">
            <label for="descricao" class="form-label">Description</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="World's Description" aria-label="World's Description" aria-describedby="button-addon2" id="descricao" name="descricao" asp-for="Descricao">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2" data-bs-toggle="modal" data-bs-target="#descriptionModal">...</button>
            </div>    
        </div>
        <div class="mb-3">
            <label for="ImgSrc" class="form-label">World Image</label>
            <input type="text" class="form-control" id="ImgSrc" placeholder="Image's adress" asp-for="ImgSrc">
        </div>
        
        <div class=" mb-3 form-group col-8">  
            <label for="autor" class="form-label">Author</label>
            <select id="autor" asp-for="Autor"class="form-control" asp-items="Html.GetEnumSelectList<Autor>()">
             <option value ="">Select Author ...</option>
            </select>
            <span asp-validation-for="Autor" class="text-danger"></span>
        </div>
        <div class="form-check form-switch mb-3">
            <label class="form-check-label" for="visible">Visible?</label>
            <input class="form-check-input" type="checkbox" id="visible" asp-for="Visible" checked>
        </div>
        <div class="mb-3">
            <label class="form-label">Continents</label>
            <select class="form-select" asp-items="@Model.Continentes" asp-for="SelectedContinentes">

            </select>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>

<!-- Modal Description -->
<form method="post" action="change-goal">
<div class="modal fade " id="descriptionModal" tabindex="-1" aria-labelledby="descriptionModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                   
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-outline">
                        <label class="form-label" for="DetailDesc">Description: </label>
                        <textarea class="form-control" name="DetailDesc" id="DetailDesc" rows="6"></textarea>                    
                </div>                   
            </div>
            <div class="modal-footer">
                    <button id="save" type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>
</form>
@section Scripts
    {
    <script>
        var text = $("#descricao").val();
        $("#DetailDesc").val(text);
        $('#save').on('click', function () {
            var text = $("#DetailDesc").val();
            $("#descricao").val(text);
        });

     
    </script>
}
